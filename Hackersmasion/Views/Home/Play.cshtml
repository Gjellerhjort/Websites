@using Hackersmansion.Models;
@model IEnumerable<Challenge>
@{
    ViewData["Title"] = "Play";
}
<h1>@ViewData["Title"]</h1>

<!-- Top row bar -->
<div class="row pt-4">
    <div class="text-center col-xl-10 offset-xl-1">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 offset-md-3">
                        <h2 class="text-bluish">Hackermansion Practice Challenges</h2>
                    </div>
                    <div class="col-6 col-md-6 offset-md-3">
                        <a asp-controller="Home" asp-action="CreateChallenge">
                            <button class="btn btn-primary">Sumbit Challenge</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Sidebar -->
<div class="row pt-2">
    <div class="col-md-5 col-lg-4 col-xl-3 offset-xl-1">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Filters</h3>
            </div>
            <div class="card-body">
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox">
                        <span class="form-check-sign">Hide solved</span>
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox">
                        <span class="form-check-sign">Show Bookmarked</span>
                    </label>
                </div>
            </div>
            <div class="card-body">
                <form class="">
                    <label class="" for="name-search">Search by name</label>
                    <div class="input-group">
                        <input id="name-search" class="form-control" aria-label="Challenge name search" type="text"
                            value="">
                        <div class="input-group-append">
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-header">
                <h4 class="card-title">Category Filter</h4>
            </div>
            <div class="card-body">
                <ul class="filter-list list-group">
                    <li class="list-group-item">All Categories &nbsp;(270)</li>
                    <li class="list-group-item">Web Exploitation (45)</li>
                    <li class="list-group-item">Cryptography (50)</li>
                    <li class="list-group-item">Reverse Engineering (55)</li>
                    <li class="list-group-item">Forensics (50)</li>
                    <li class="list-group-item">General Skills (33)</li>
                    <li class="active list-group-item">Binary Exploitation (37)</li>
                    <li class="list-group-item">Uncategorized </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-7 col-lg-8 col-xl-7">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="pb-0 card-body">
                        <div class="row"></div>
                        <nav class="col-md-6 offset-md-4" aria-label="pagination">
                            <ul class="pagination">
                                <li class="page-item disabled">
                                    <a aria-label="First" href="#" class="page-link">
                                        <span aria-hidden="true">«</span>
                                        <span class="sr-only">First</span>
                                    </a>
                                </li>
                                <li class="page-item disabled">
                                    <a aria-label="Previous" href="#" class="page-link">
                                        <span aria-hidden="true">‹</span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                <li class="page-item active">
                                    <button title="Page 1" class="page-link">1</button>
                                </li>
                                <li class="page-item">
                                    <button title="Page 2" class="page-link">2</button>
                                </li>
                                <li class="page-item">
                                    <button title="Page 3" class="page-link">3</button>
                                </li>
                                <li class="page-item">
                                    <button title="Page 4" class="page-link">4</button>
                                </li>
                                <li class="page-item">
                                    <a aria-label="Next" href="#" class="page-link">
                                        <span aria-hidden="true">›</span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a aria-label="Next" href="#" class="page-link">
                                        <span aria-hidden="true">»</span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
        <div class="row row-cols-3">
        @foreach (Challenge challenges in Model)
        {
            <div class="pt-2">
                <div class="card shadow">
                    <div class="card-header bg-white">
                        <div class="pull-right score body-md">
                            <h4 class="body-md mt-1 card-title">@challenges.Name</h4>
                        </div>
                    </div>
                    <div class="card-body bg-white">
                        <h4>@challenges.Email</h4>
                    </div>
                    <div class="card-footer bg-white">
                        <div class="row">
                            <div class="body-md col-md-6">
                                ? solves
                            </div>
                        </div>
                    </div>
                </div>
                </div>
        }
        </div>
        </div>
    </div>  
</div>
</div>
</div>
